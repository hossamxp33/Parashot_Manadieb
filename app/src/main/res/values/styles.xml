<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="StarRatingBars" parent="@android:style/Widget.RatingBar">
        <item name="android:indeterminateDrawable">@drawable/ub__stars</item>
        <item name="android:progressDrawable">@drawable/ub__stars</item>
        <item name="colorControlNormal">#FFC107</item>
    </style>

</resources>
