        <TextView
            android:id="@+id/orderstatuesvalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            android:layout_weight="2"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="2"
            android:textColor="@color/black"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guidvertical3"
            app:layout_constraintHorizontal_bias="0.08"
            app:layout_constraintStart_toEndOf="@id/guidvertical1" />

        <TextView
            android:id="@+id/action"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:background="@drawable/ic_keyboard_arrow_left_black_24dp"
            android:ellipsize="end"
            android:gravity="center"
            android:textColor="#fff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <ImageView
            android:id="@+id/chating"
            android:layout_width="35dp"

            android:layout_height="30dp"
            app:layout_constraintEnd_toStartOf="@id/action"
            app:layout_constraintTop_toTopOf="@+id/action"
            app:srcCompat="@drawable/chat" />

                <ImageView
                    android:id="@+id/delivery_view"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
