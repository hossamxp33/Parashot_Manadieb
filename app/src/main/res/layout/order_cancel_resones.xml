<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layoutDirection="rtl"
    android:background="@drawable/linear_background_for_order_actions"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/delivered"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text=" برجاء تحديد سبب الغاء الطلب  : "
        android:gravity="center"
        android:textSize="18dp"
        android:background="@color/red"
        android:textColor="@color/white"
        />


    <RadioGroup
        android:id="@+id/resons"
        android:layout_width="match_parent"
        android:layout_margin="9dp"
        android:layout_height="wrap_content">


        <RadioButton
            android:id="@+id/reson1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/red"
            android:text="هذا النص يمكن ان يستبدل "
            />

        <RadioButton
            android:id="@+id/reson2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="هذا النص يمكن ان يستبدل "
            />

        <RadioButton
            android:id="@+id/reson3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="هذا النص يمكن ان يستبدل "
            />

        <RadioButton
            android:id="@+id/reson4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="هذا النص يمكن ان يستبدل "
            />
    </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:id="@+id/send"
            android:background="@drawable/linear_background_for_send"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="ارسال"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>